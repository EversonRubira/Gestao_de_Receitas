			"name": "1. Autenticação",
			"item": [
				{
					"name": "Login - Obter Token JWT",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"// Salvar o token automaticamente",
									"if (pm.response.code === 200) {",
									"    var jsonData = pm.response.json();",
									"    pm.environment.set(\"auth_token\", jsonData.token);",
									"    console.log(\"Token salvo: \" + jsonData.token);",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"email\": \"admin@receitas.pt\",\n  \"password\": \"admin123\"\n}"
						},
						"url": {
							"raw": "http://localhost:3000/api/auth/login",
							"protocol": "http",
							"host": [
								"localhost"
							],
							"port": "3000",
							"path": [
								"api",
								"auth",
								"login"
							]
						},
						"description": "Fazer login e obter token JWT para autenticação.\n\nCredenciais de teste:\n- Email: admin@receitas.pt\n- Password: admin123"
					},
					"response": []
				}
			],
			"description": "Endpoints de autenticação JWT"
		},
